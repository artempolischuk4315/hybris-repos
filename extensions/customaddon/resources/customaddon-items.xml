<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>

		<itemtype code="CustomCMSComponent" generate="true"
				  jaloclass="de.hybris.platform.yacceleratorcore.jalo.cms2.components.CMSMediaParagraphComponent"
				  extends="CMSParagraphComponent" autocreate="true">
			<description>It represents paragraph component with an additional media attribute.</description>
			<attributes>
				<attribute qualifier="image" generate="true" autocreate="true" type="localized:Media">
					<persistence type="property" />
					<description>Attribute that stores the localized media.</description>
				</attribute>
				<attribute qualifier="title" generate="true" autocreate="true" type="localized:java.lang.String">
					<persistence type="property" />
					<description>Title.</description>
				</attribute>
				<attribute qualifier="description" generate="true" autocreate="true" type="localized:java.lang.String">
					<persistence type="property" />
					<description>Description.</description>
				</attribute>
			</attributes>
		</itemtype>

	</itemtypes>
</items>
